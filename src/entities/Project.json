
{
  "name": "Project",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Project title"
    },
    "category": {
      "type": "string",
      "description": "Project category (e.g., Web, Mobile, Design)"
    },
    "type": {
      "type": "string",
      "description": "Project type"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "image_url": {
      "type": "string",
      "description": "Project image URL (optional)"
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technologies used"
    },
    "link": {
      "type": "string",
      "description": "Project URL or demo link"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Featured project"
    },
    "order": {
      "type": "number",
      "default": 0,
      "description": "Display order"
    }
  },
  "required": ["title", "category", "type"]
}